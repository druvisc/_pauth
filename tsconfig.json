{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "es2016.array.include"
    ]
  },
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}